{
  "name": "celeris-admin-monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@7.11.0",
  "author": "Kirk Lin (https://github.com/kirklin)",
  "license": "MIT",
  "homepage": "https://github.com/kirklin/celeris-admin",
  "keywords": [
    "celeris-admin",
    "celeris",
    "vite",
    "unocss",
    "fast",
    "boot"
  ],
  "main": "src/main.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "bootstrap": "pnpm install",
    "dev": "pnpm --filter scripts dev",
    "build": "pnpm --filter scripts build",
    "clean": "npm run clean:all && rimraf node_modules",
    "clean:all": "npm run clean:apps && npm run clean:web && npm run clean:node",
    "clean:apps": "pnpm --filter ./apps/admin/** clean",
    "clean:web": "pnpm --filter ./packages/web/** clean",
    "clean:node": "pnpm --filter ./packages/node/** clean",
    "typecheck": "vue-tsc --noEmit",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "reinstall": "npm run clean && rimraf pnpm-lock.yaml && npm run bootstrap",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@celeris/tsconfig": "workspace:*",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@kirklin/eslint-config": "^0.2.2",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.18",
    "@types/nprogress": "^0.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-plugin-tailwindcss": "^3.8.0",
    "esno": "^0.16.3",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4",
    "unbuild": "^1.0.2",
    "unocss": "^0.48.4",
    "vitest": "^0.27.1"
  },
  "lint-staged": {
    "**/*": "eslint --fix"
  }
}

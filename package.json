{
  "name": "celeris-admin-monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "author": "Kirk Lin (https://github.com/kirklin)",
  "license": "MIT",
  "homepage": "https://github.com/kirklin/celeris-admin",
  "keywords": [
    "Celeris Admin",
    "celeris-admin",
    "celeris",
    "front-end development",
    "Vue 3",
    "Vite",
    "TypeScript",
    "monorepo",
    "OpenAI",
    "natural language processing",
    "streamlined development",
    "lightning-fast",
    "components",
    "APIs",
    "Vue Router",
    "loading feedback",
    "state management",
    "Chinese font",
    "i18n",
    "Netlify"
  ],
  "main": "src/main.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "bootstrap": "pnpm install",
    "dev": "pnpm --filter scripts dev",
    "build": "pnpm --filter scripts build",
    "clean": "rimraf node_modules **/*/node_modules **/**/*/node_modules **/*/dist **/**/*/dist",
    "clear": "rimraf 'packages/*/{lib,node_modules}' && rimraf node_modules",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm -r run test",
    "test:coverage": "pnpm -r run test:coverage",
    "reinstall": "npm run clean && rimraf pnpm-lock.yaml && npm run bootstrap",
    "cs": "changeset",
    "cs:version": "changeset version",
    "cs:tag": "changeset tag",
    "up": "taze major -r -w -I",
    "release": "bumpp -r && pnpm -r publish --access public",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@celeris/tsconfig": "workspace:*",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@kirklin/eslint-config": "^0.3.6",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.2.1",
    "@types/nprogress": "^0.2.0",
    "@vitest/coverage-c8": "^0.31.1",
    "bumpp": "^9.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "jsdom": "^22.0.0",
    "lint-staged": "^13.2.2",
    "rimraf": "^5.0.1",
    "taze": "^0.10.1",
    "typescript": "^5.0.4",
    "unbuild": "^1.2.1",
    "vite": "^4.3.8",
    "vitest": "^0.31.1"
  },
  "lint-staged": {
    "**/*": "eslint --fix"
  }
}

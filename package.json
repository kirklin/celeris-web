{
  "name": "celeris-admin-monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@7.11.0",
  "author": "Kirk Lin (https://github.com/kirklin)",
  "license": "MIT",
  "homepage": "https://github.com/kirklin/celeris-admin",
  "keywords": [
    "celeris-admin",
    "celeris",
    "vite",
    "unocss",
    "fast",
    "boot"
  ],
  "main": "src/main.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "bootstrap": "pnpm install",
    "dev": "pnpm --filter scripts dev",
    "build": "pnpm --filter scripts build",
    "clean": "rimraf node_modules **/*/node_modules **/**/*/node_modules **/*/dist **/**/*/dist",
    "clear": "rimraf 'packages/*/{lib,node_modules}' && rimraf node_modules",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "reinstall": "npm run clean && rimraf pnpm-lock.yaml && npm run bootstrap",
    "cs": "changeset",
    "cs:version": "changeset version",
    "cs:tag": "changeset tag",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@celeris/tsconfig": "workspace:*",
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@kirklin/eslint-config": "^0.2.5",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.11.18",
    "@types/nprogress": "^0.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.4",
    "unbuild": "^1.1.1",
    "vitest": "^0.28.3"
  },
  "lint-staged": {
    "**/*": "eslint --fix"
  }
}
